<div class="jumbotron text-center">
    <h2>Contact us</h2>
</div>

<div class="container" style="margin-top:30px">
<h3>Contact us by filling this form</h3 >
  <div class="row">
    <div class="col-sm-4">
      <%=form_for @contact do |f| %>
          <%= f.label :name  %>
          <br/>
          <%= f.text_field :name %>
          <br/>
          <%= f.label :message %>
          <br/>
          <%= f.text_area :message, cols:20, rows:10 %>
          <br/>
          <%= f.submit :submit %>
      <% end %>
    </div>
  </div>
</div>