<%= form_for([@article, @article.comments.build], remote:true, html: {id: :form_id}) do |f| %>
    <%= f.hidden_field :article_id, value: @article.id %>
    <%= f.label :username  %>
    <br/>
    <%= f.text_field :username %>
    <%= @comment.errors[:username].first unless @comment.errors[:username].blank?  %>
    <br/>
    <%= f.label :content %>
    <br/>
    <%= f.text_area :content, cols:20, rows:10 %>
    
    <br/>
    <%= f.submit :submit %>
<% end %>