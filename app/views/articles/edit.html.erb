<div class="jumbotron text-center">
    <h2>Edit Article</h2>
</div>

<div class="container" style="margin-top:30px">
<h3>Edit article:</h4>
  <div class="row">
    <div class="col-sm-4">

        <%= form_for @article do |f| %>
            <%= f.label:title %>
            <br/>
            <%= f.text_field :title %>
            <br/>
            <%= f.label :content %>
            <br/>
            <%= f.text_area :content, cols:20, rows:10 %>
            <br/>
            <%= f.label :status %>
            <br/>
            <%= f.radio_button :status, 'active' %>
            <%= label :article_status, 'active' %>
            <%= f.radio_button :status, 'off' %>
            <%= label :article_status, 'off' %>
            <br/>
            <%= f.submit :submit %>
        <% end %>

        <div>
            <%=link_to "Back to article", article_path %>
        </div>

      </div>
  </div>
</div>