<div class="container" style="margin-top:30px">
  <div class="row">
    <div class="col-sm-4">
        <h2>Show Articles</h2>

        <h3><%= @article.title %></h3>
        <p><%= @article.content %></p>
        <span>status: <%= @article.status %></span>
        <p>
            <%= link_to 'index', articles_path %>
        </p>
         
         <% @article.comments.each do |c| %>
              <strong><%= c.username %>:</strong>
              <br/>
              <%= c.content %>
              <br/>
              <br/>
          <% end %>
    </div>
    <div class="col-sm-4">
    </div>
    <div class="col-sm-4">
      <h5>Submit your reply:</h5>
      <%= render 'comments/form' %>
    </div>
  </div>
</div>